  <div class="game-container">
    <!-- Poster with play button -->
    <div class="poster-container" id="poster">
      <img id="posterImage" src="poster.jpg" alt="Game Poster">
      <button class="play-button" onclick="playGame()">â–¶ Play</button>
    </div>

    <!-- Game iframe -->
    <iframe id="gameFrame" src=""></iframe>

